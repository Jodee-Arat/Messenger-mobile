{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./app/*"]
		},
		"moduleResolution": "bundler"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"src/types/**/*.d.ts",
		"app/ErrorUtilsPolyfill.js"
	]
}
